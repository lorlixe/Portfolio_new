{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="projects">
		<div id="projects-container">
			{% for project in projects %}
				<div class="project-card">
					<div class="card-content">
						<div class="card-text">
							<h3>{{ project.title }}</h3>
							<p>{{ project.description}}</p>
							{% for stack in project.getStacks %}
								<img src="/uploads/{{ stack.icon}}" alt="{{ stack.name }}"/>
							{% endfor %}
							{% for category in project.getCategoryId %}
								<p>{{ category.name}}</p>
							{% endfor %}

							<a href="{{ path('app_project_show',{id: project.id}) }}" class="card-button">Learn More</a>
						</div>
						<div class="card-image">
							<img src="/uploads/{{ project.image }}" alt="{{ project.title }}"/>
						</div>
					</div>
				</div>

			{% else %}
				<li>Aucun enregistrement en base de donn√©es.</li>
			{% endfor %}
		</div>
	</div>
{% endblock %}
